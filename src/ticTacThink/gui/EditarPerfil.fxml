<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@estilo.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ticTacThink.gui.EditarPerfilController">
   <center>
      <VBox>
         <children>
            <VBox fillWidth="false" prefHeight="285.0" prefWidth="234.0" spacing="5.0">
               <children>
                  <Label text="Nome" />
                  <TextField prefHeight="25.0" prefWidth="163.0" promptText="nome" />
                  <Label layoutX="10.0" layoutY="10.0" text="Senha" />
                  <TextField layoutX="10.0" layoutY="27.0" prefHeight="25.0" prefWidth="163.0" promptText="senha" />
                  <Label layoutX="10.0" layoutY="52.0" text="Confirmar senha" />
                  <TextField layoutX="10.0" layoutY="69.0" prefHeight="25.0" prefWidth="163.0" promptText="confirmar senha" />
                  <Label layoutX="10.0" layoutY="94.0" text="País" />
                  <TextField layoutX="10.0" layoutY="111.0" prefHeight="25.0" prefWidth="163.0" promptText="país" />
                  <Label text="Data de Nascimento" />
                  <TextField prefHeight="25.0" prefWidth="163.0" promptText="dd/MM/aa" />
                  <Label text="Gênero" />
               </children>
            </VBox>
            <HBox prefHeight="42.0" prefWidth="255.0" spacing="5.0">
               <children>
                  <RadioButton mnemonicParsing="false" text="Masculino">
                     <toggleGroup>
                        <ToggleGroup fx:id="grupo" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton mnemonicParsing="false" text="Feminino" toggleGroup="$grupo" />
                  <RadioButton mnemonicParsing="false" selected="true" text="Neutro" toggleGroup="$grupo" />
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#voltar" text="Voltar">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Pane HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" text="Concluir">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
