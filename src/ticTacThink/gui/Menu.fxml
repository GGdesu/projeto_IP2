<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane minHeight="400.0" minWidth="600.0" nodeOrientation="LEFT_TO_RIGHT" stylesheets="@estilo.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ticTacThink.gui.MenuControlador">
   <center>
    <Text fill="#4d4d4d" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="titulo" text="TIC TAC THINK!" textAlignment="CENTER">
      <font>
        <Font name="Candara" size="50.0" />
      </font>
    </Text>
   </center>
   <bottom>
      <HBox alignment="BOTTOM_CENTER" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="BOTTOM_LEFT">
               <children>
                  <Button mnemonicParsing="false" onAction="#iniciar" styleClass="botao-grande" text="Iniciar Partida">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="20.0" />
                     </VBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#ranking" styleClass="botao-grande" text="Ranking">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="20.0" top="15.0" />
                     </VBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#perfil" styleClass="botao-grande" text="Perfil">
                     <font>
                        <Font size="16.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="20.0" left="20.0" top="15.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
            <Pane HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#logout" text="Logout">
               <font>
                  <Font size="10.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="20.0" right="20.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
