<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane minHeight="400.0" minWidth="600.0" stylesheets="@estilo.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ticTacThink.gui.LoginControlador">
   <center>
      <VBox alignment="TOP_CENTER">
         <children>
            <TextField fx:id="email" promptText="Email">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </TextField>
            <PasswordField fx:id="senha" onAction="#entrar" promptText="Senha">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </PasswordField>
            <HBox alignment="CENTER">
               <children>
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#entrar" styleClass="botao-minusculo" text="Entrar" />
                  <Pane HBox.hgrow="ALWAYS" />
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#cadastrar" styleClass="botao-minusculo" text="Cadastrar" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets top="20.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <left>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </right>
   <top>
      <Text fill="#4d4d4d" strokeType="OUTSIDE" strokeWidth="0.0" text="TIC TAC THINK!" textAlignment="CENTER" BorderPane.alignment="BOTTOM_CENTER">
         <font>
            <Font name="Candara" size="50.0" />
         </font>
         <BorderPane.margin>
            <Insets top="120.0" />
         </BorderPane.margin>
      </Text>
   </top>
</BorderPane>
